@inject UserService UserService
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <p class="navbar-brand">WalletTracker</p>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                User's Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="transaction" Match="NavLinkMatch.All">
                Transaction Table
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link"  Match="NavLinkMatch.All" @onclick="Logout">
                Signout
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private void Logout()
    {
        UserService.ResetDebit(UserService.loggedInUserName);
        NavigationManager.NavigateTo("/");
    }
}
